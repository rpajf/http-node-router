{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "resolveJsonModule": true,  
    "sourceMap": true, 
  },
  "include": ["src/**/*", "src/index.ts"],

  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}